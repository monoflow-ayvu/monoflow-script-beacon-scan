{
  "name": "beacon-scan",
  "version": "0.40.0",
  "description": "Escaneia e salva os metadatos dos beacons.",
  "settingsSchema": {
    "display": "form",
    "components": [
      {
        "label": "Habilitar display do beacon mais perto (BEACON CHECK)",
        "tableView": false,
        "key": "enableBeaconCheck",
        "type": "checkbox",
        "input": true,
        "defaultValue": false
      },
      {
        "key": "beaconSetConf",
        "conditional": {
          "show": true,
          "when": "enableBeaconCheck",
          "eq": "true"
        },
        "type": "fieldset",
        "label": "Field Set",
        "input": false,
        "tableView": false,
        "components": [
          {
            "label": "Tags",
            "tooltip": "Se o dispositivo ou login tiver um desses tags, a função BEACON CHECK vai se habilitar.",
            "tableView": false,
            "storeas": "array",
            "validate": {
              "required": true
            },
            "key": "tags",
            "type": "tags",
            "input": true
          },
          {
            "label": "ID Page",
            "tooltip": "ID da Page para abrir ao ter modo CHECK ativo.",
            "tableView": true,
            "validate": {
              "required": true
            },
            "key": "pageId",
            "type": "textfield",
            "input": true
          },
          {
            "label": "Filtro distância",
            "tooltip": "Só distancias menores vão aparecer. Distancia 0 significa 'apresentar todo, indiferente da distancia'.",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "key": "distanceFilter",
            "type": "number",
            "input": true,
            "defaultValue": 0
          },
          {
            "label": "Deshabilitar fechamento de sessão",
            "tableView": false,
            "key": "disableLogout",
            "type": "checkbox",
            "input": true,
            "defaultValue": false
          }
        ]
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all",
    "test": "jest"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.26.10",
    "@babel/plugin-transform-arrow-functions": "7.25.9",
    "@babel/preset-env": "7.26.9",
    "@babel/preset-typescript": "7.27.0",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "@size-limit/preset-big-lib": "11.2.0",
    "@types/commander": "2.12.5",
    "@types/firebase": "3.2.1",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.16",
    "@types/node": "22.15.2",
    "@types/uuid": "10.0.0",
    "babel-loader": "10.0.0",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "13.1.0",
    "compression-webpack-plugin": "11.1.0",
    "graphql": "16.11.0",
    "graphql-request": "7.1.2",
    "inquirer": "12.6.0",
    "jest": "29.7.0",
    "mobx-keystone": "1.11.4",
    "react-native-beacon-scanner": "1.8.0",
    "semver": "7.7.1",
    "size-limit": "11.2.0",
    "ts-loader": "9.5.2",
    "typed-emitter": "2.1.0",
    "typescript": "4.9.5",
    "webpack": "5.99.7",
    "webpack-cli": "6.0.1"
  },
  "dependencies": {
    "@fermuch/monoutils": "0.2.0",
    "@fermuch/telematree": "14.0.0",
    "cross-fetch": "3.2.0",
    "firebase": "9.23.0",
    "lodash": "4.17.21",
    "mobx": "6.13.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/private/jest/setup.ts"
    ]
  }
}
